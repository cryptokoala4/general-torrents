<fieldset>
  <legend><strong>Torrent Upload</strong></legend>
  <form class="container well upload-div" action="/torrents"enctype="multipart/form-data" method="POST">
      <div class="form-group">
        <input type="file" name="file">
      </div>
      <div class="form-group">
        <select list="category" class="form-control" type="text" name="torrent[category]">
          <datalist id="category">
            <option selected="selected">Select a category</option>
            <option value="video">Video</option>
            <option value="book">Book</option>
            <option value="app">App</option>
            <option value="music">Music</option>
            <option value="other">Other</option>
          </datalist>
      </div>
      <div class="form-group">
        <input class="form-control" placeholder="Torrent Name" type="text" name="torrent[name]">
      </div>
      <div class="form-group">
        <input class="form-control" placeholder="Description" type="text" name="torrent[details]">

      </div>
    <div class="form-group">
      <button class="btn btn-success">Submit</button>
    </div>
  </form>
</fieldset>
